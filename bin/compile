$stdout.sync = true
$stderr.sync = true
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'java_buildpack/buildpack'
require 'fileutils'

build_dir = ARGV[0]
builpack_dir = File.expand_path('../..', __FILE__)

FileUtils.cp_r "#{builpack_dir}/lib/datadog-agent", "#{build_dir}/datadog-agent", :verbose => true

datadog_config_path = "#{build_dir}/datadog-agent/agent/datadog.conf"
datadog_config = File.read(datadog_config_path)
datadog_config_new = datadog_config.gsub(/DATADOG_API_KEY/, ENV["DATADOG_API_KEY"])
File.open(datadog_config_path, "w") {|file| file.puts datadog_config_new }

JavaBuildpack::Buildpack.with_buildpack(build_dir, 'Compile failed with exception %s') do |buildpack|
  buildpack.compile
end
